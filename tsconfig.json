{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "jsx": "react-jsx",
    "paths": {
      "#*": [
        "./app/*"
      ],
      "#controllers/*": [
        "./app/controllers/*"
      ],
      "#exceptions/*": [
        "./app/exceptions/*"
      ],
      "#models/*": [
        "./app/models/*"
      ],
      "#mails/*": [
        "./app/mails/*"
      ],
      "#services/*": [
        "./app/services/*"
      ],
      "#listeners/*": [
        "./app/listeners/*"
      ],
      "#events/*": [
        "./app/events/*"
      ],
      "#middleware/*": [
        "./app/middleware/*"
      ],
      "#validators/*": [
        "./app/validators/*"
      ],
      "#providers/*": [
        "./providers/*"
      ],
      "#policies/*": [
        "./app/policies/*"
      ],
      "#abilities/*": [
        "./app/abilities/*"
      ],
      "#database/*": [
        "./database/*"
      ],
      "#tests/*": [
        "./tests/*"
      ],
      "#start/*": [
        "./start/*"
      ],
      "#config/*": [
        "./config/*"
      ],
      "#actions/*": [
        "./app/actions/*"
      ]
    }
  },
  "exclude": ["./inertia/**/*", "node_modules", "build"]
}
